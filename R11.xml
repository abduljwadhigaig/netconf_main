<config xmlns="urn:ietf:params:xml:ns:netconf:base:1.0">
<native xmlns="http://cisco.com/ns/yang/Cisco-IOS-XE-native">
      <interface>
         <GigabitEthernet>
            <name>2</name>
            <shutdown xmlns:nc="urn:ietf:params:xml:ns:netconf:base:1.0" nc:operation="delete"/>
           <ip>
                <address>
                   <primary>
                        <address>172.30.10.11</address>
                            <mask>255.255.255.0</mask>
                   </primary>
                </address>
          </ip>
         </GigabitEthernet>
         <GigabitEthernet>
            <name>3</name> 
            <shutdown xmlns:nc="urn:ietf:params:xml:ns:netconf:base:1.0" nc:operation="delete"/> 
            <ip>
                <address>
                   <primary>
                        <address>10.0.12.1</address>
                            <mask>255.255.255.0</mask>
                   </primary>
                </address>
          </ip>
         </GigabitEthernet>
         <GigabitEthernet>
            <name>4</name>
            <shutdown xmlns:nc="urn:ietf:params:xml:ns:netconf:base:1.0" nc:operation="delete"/>  
            <ip>
                <address>
                   <primary>
                        <address>192.168.111.254</address>
                            <mask>255.255.255.0</mask>
                   </primary>
                </address>
          </ip>
         </GigabitEthernet>
         <Loopback>
            <name>0</name>
           <ip>
                <address>
                   <primary>
                        <address>10.0.0.11</address>
                            <mask>255.255.255.255</mask>
                   </primary>
                </address>
          </ip>
         </Loopback>
      </interface>
			<router>
           <router-ospf xmlns="http://cisco.com/ns/yang/Cisco-IOS-XE-ospf">
				<ospf>
             <process-id>
					<id>40</id>
					<router-id>10.0.0.11</router-id>
					<network>
						<ip>10.0.0.11</ip>
						<wildcard>0.0.0.0</wildcard>
						<area>0</area>
					</network>
					<network>
						<ip>192.168.111.0</ip>
						<wildcard>0.0.0.255</wildcard>
						<area>0</area>
					</network>
               <passive-interface>
                  <interface>GigabitEthernet2</interface> 
                  <interface>GigabitEthernet3</interface> 
               </passive-interface>
            	<redistribute>
						<bgp>
							<as>10</as>
						</bgp>
					</redistribute>
                </process-id>
				</ospf>
			</router-ospf>
				<bgp xmlns="http://cisco.com/ns/yang/Cisco-IOS-XE-bgp">
					<id>10</id>
					<neighbor>
						<id>172.30.10.101</id>
						<remote-as>30</remote-as>
					</neighbor>
					<neighbor>
						<id>10.0.12.2</id>
						<remote-as>20</remote-as>
					</neighbor>
               <address-family>
              <no-vrf>
                <ipv4>
                  <af-name>unicast</af-name>
                  <ipv4-unicast>
                    <neighbor>
                     <id>172.30.10.101</id>
                     <activate/>
                     </neighbor>
                     <neighbor>
                     <id>10.0.12.2</id>
                     <activate/>
                     </neighbor>
                    <network>
                      <with-mask>
                        <number>10.0.0.11</number>
                        <mask>255.255.255.255</mask>
                      </with-mask>
                    </network>
                     <network>
                      <with-mask>
                        <number>172.30.10.0</number>
                        <mask>255.255.255.0</mask>
                      </with-mask>
                     </network>
                      <network>
                      <with-mask>
                        <number>10.0.12.0</number>
                        <mask>255.255.255.0</mask>
                      </with-mask>
                    </network>
                    <redistribute>
                      <ospf>
                        <id>40</id>
                      </ospf>
                    </redistribute>
                 </ipv4-unicast>
               </ipv4>
            </no-vrf>
        </address-family>
        </bgp>
		</router>
   </native>
</config>